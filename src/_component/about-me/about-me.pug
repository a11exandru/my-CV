-
  var header = '#About me'
  var imagePath = 'asset/image/IMG-20181019-WA0001.jpg', alt='Un baiat f frumos'
  var myFullName = 'Alexandru Puiu'
  var myTitle = 'Web developer'
  var slogan= 'Aici trebuia sa fie un slogan, dar e in lucru.'
  var achievements = {
    title: 'Achievements',
    content: "I'm a beginner but a built a copy of w3schools.com"
  }
  var coolStuff = {
    title: 'grab cool stuff',
    buttonList: [
      {
        url: 'https://github.com/a11exandru/my-cv',
        icon: 'github',
        label: 'Click to visit the GitHub project source! ',
      }
    ]
  }
//- the view comes here

#about-me
.about-me
  .about-me__header=header
  .about-me__avatar-wrapper
    img.about-me__avatar(src=imagePath, alt="Aici trebuia sa fie un baiat f frumos")
  .about-me__full-name=myFullName
  .about-me__full-title=myTitle
  .about-me__slogan=slogan
  .about-me__title=achievements.title
  .about-me__content=achievements.content
  .about-me__grab-cool-stuff=coolStuff.title
  .about-me__link-list
    each button in coolStuff.buttonList
      a(href=button.url)
        span=button.label
        span(class=`my-cv__icon--${button.icon}`)
