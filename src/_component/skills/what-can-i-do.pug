//- the model, the data

-
  var header = '#Skills';
  var whatCanIDoList = [
    {
      title: 'Front End',
      skillList: [
        'HTML5',
        'CSS3',
        'JavaScript',
        'football player',
        'sport lover',
      ]
    },
    {
      title: 'Back End',
      skillList: [
        'Git',
        'Master',
        'Maestru in devenire',
        'Virtual Dreamer',
      ]
    }
  ];

//- the presentation, the view

#what-i-can-do
.what-i-can-do
  .what-i-can-do__header=header
  each whatCanIDo in whatCanIDoList
    .what-i-can-do__title=whatCanIDo.title
    .what-i-can-do__list
      each skill in whatCanIDo.skillList
        .what-i-can-do__skill=skill
